<% layout('/layouts/boilerplate') %>

<body>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= restaurant.image%>" class="card-img-top img-fluid" alt="...">
                <div class="card-body">
                    <h3 class="card-title"><%= restaurant.name %> </h3>
                    <p class="card-text"><%= restaurant.description %> </p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%=restaurant.cuisine%></li>
                        <li class="list-group-item">Prices:
                            <% switch (restaurant.cost) {
                        case "Low": %>
                            $
                            <% break;
                        case "Med": %>
                            $$
                            <% break;
                        case "High": %>
                            $$$
                            <% break;
                        default:
                        break; } %>
                        </li>
                        <li class="list-group-item text-muted">Submitted by: <%= restaurant.author.username%></li>
                    </ul>
                    <form action="/restaurants/<%=restaurant.id%>/?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>