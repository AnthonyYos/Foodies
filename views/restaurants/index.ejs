<% layout('/layouts/boilerplate') %>

<body>
    <% for (let restaurant of restaurants){ %>
    <div class="card">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <div class="card-body">
                    <h3 class="card-title"><%= restaurant.name %> </h3>
                    <p class="card-text">Prices:
                        <% switch (restaurant.cost) {
                        case "Low": %>
                        $
                        <% break;
                        case "Med": %>
                        $$
                        <% break;
                        case "High": %>
                        $$$
                        <% break;
                        default:
                        break; } %>
                    </p>
                    <p class="card-text"><%= restaurant.description%></p>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</body>