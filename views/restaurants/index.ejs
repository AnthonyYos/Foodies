<% layout('/layouts/boilerplate') %>

<body>
    <% if(restaurants.length>0) {%>
    <% for (let restaurant of restaurants){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%=restaurant.image%>" alt="" class="img-fluid">
            </div>
            <div class="col-8">
                <div class="card-body">
                    <h3 class="card-title"><%= restaurant.name %> </h3>
                    <p class="card-text">Prices:
                        <% switch (restaurant.cost) {
                        case "Low": %>
                        $
                        <% break;
                        case "Med": %>
                        $$
                        <% break;
                        case "High": %>
                        $$$
                        <% break;
                        default:
                        break; } %>
                    </p>
                    <p class="card-text"><%= restaurant.description%></p>
                    <a href="/restaurants/<%=restaurant._id%>" class="btn btn-primary">View Restaurant</a>
                </div>
            </div>
        </div>
    </div>
    <% } }else{%>
    <div class="row">
        <div class="col-6 offset-3">
            <a href="/restaurants/add" class="btn btn-success">Add Restaurant</a>
        </div>
    </div>
    <%}%>
</body>